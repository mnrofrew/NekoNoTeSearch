{
  "name": "Neko no Te",
  "description": "a tiny extension to let one search in multiple search engines in one shot",
  "version": "1.1",
  "manifest_version": 3,
  "omnibox": {"keyword": "neko"},
  "background": {
    "persistance": false,
    "service_worker": "background.js"
  },
  "permissions": ["storage", "scripting", "contextMenus"],
  "icons": {
    "16": "/images/nipi.png",
    "32": "/images/nipi.png",
    "48": "/images/nipi.png",
    "128": "/images/nipi.png"
  },
  "options_page": "options.html",
  "action":{
    "default_title": "Click to Open Options",
    "default_popup": "options.html"
  }
}
